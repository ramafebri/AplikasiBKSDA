<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".view.perizinan.PerizinanFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    style="@style/Text"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:text="@string/perizinan" />

                <ImageButton
                    android:id="@+id/btn_penangkaran"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_penangkaran"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    />

                <ImageButton
                    android:id="@+id/btn_pemanfaatan_air"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_pemanfaatan_air"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    />

                <ImageButton
                    android:id="@+id/btn_penerbitan_izin"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_penerbitan_izin"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    />

                <ImageButton
                    android:id="@+id/btn_angkut_tumbuhan"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_angkut_tumbuhan"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    />

                <ImageButton
                    android:id="@+id/btn_rusa"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_rusa"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    />
        </LinearLayout>
</ScrollView>